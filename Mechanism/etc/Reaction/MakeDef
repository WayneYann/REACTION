#V Package specific variable definitions.

DevelopmentRoot = $(PackageRoot)/..
CPPFLAGS += -g -I$(PackageRoot)/include/Reaction\
 -I$(PackageRoot)/include/CoreObjects\
 -I$(PackageRoot)/include/Basis\
 -I$(REACTROOT)/standard\
 -I$(REACTROOT)/genc\
 -I$(REACTROOT)/genh

LDFLAGS  += -L$(PackageRoot)/lib
LDLIBS   := -lMechanism $(LDLIBS)
